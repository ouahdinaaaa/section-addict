<style>
  #shopify-section-{{ section.id }} {
    --text-color: {{ section.settings.text_color }};
    --button-bg: {{ section.settings.button_color }};
    --button-text-color: {{ section.settings.button_text_color }};
    --wave-color: {{ section.settings.wave_color }};
  }

  .section-{{ section.id }}-padding {
    max-width: {{ section.settings.section_width }}rem;
    margin: 0 auto;
    padding: 0 1.5rem;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .banner-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    position: relative;
    z-index: 1;
    overflow: hidden;
  }

  .banner-heading {
    font-weight: 800;
    line-height: 110%;
    color: var(--text-color);
    margin: 0 0 1rem 0;
  }

  .banner-subheading {
    line-height: 140%;
    color: var(--text-color);
    margin: 0 0 1.5rem 0;
  }

  .banner-meta {
    line-height: 140%;
    color: var(--text-color);
    margin: 0 0 1.5rem 0;
  }

  .banner-image {
    width: 100%;
    height: auto;
    padding: {{ section.settings.image_padding }}px 0;
    transition: all 0.3s ease;
    display: block;
  }

  .banner-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    align-items: center;
    gap: 20px;
    flex-wrap: nowrap;
  }

  .banner-desktop-flex {
    display: flex;
    flex-wrap: nowrap;
    gap: 2rem;
    align-items: center;
  }

  @media screen and (min-width: 750px) {
    .banner-desktop-flex {
      display: flex;
      flex-direction: row;
      flex-wrap: nowrap;
      align-items: center;
      gap: 2rem;
      justify-content: space-between;
    }
    .banner-content {
      text-align: left;
      align-items: flex-start;
      flex: 1;
    }
    .banner-image-wrapper {
      flex: 1;
    }
  }

  .rating-container {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
  }

  .rating-stars {
    position: relative;
    display: inline-block;
    color: #FFD700;
    margin-right: 10px;
    font-size: 16px;
  }

  .rating-stars::before {
    content: "☆☆☆☆☆";
  }

  .rating-stars span {
    position: absolute;
    top: 0;
    left: 0;
    overflow: hidden;
    white-space: nowrap;
  }

  .rating-stars span::before {
    content: "★★★★★";
  }

  .rating-text {
    display: block;
    font-weight: bold;
    color: {{ section.settings.rating_text_color }};
  }

  .banner-cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    background: var(--button-bg);
    color: var(--button-text-color);
    font-weight: 600;
    text-decoration: none;
    border-radius: 30px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    border: none;
    cursor: pointer;
  }

  .banner-cta:hover {
    background-color: {{ section.settings.button_color | color_darken: 10 }};
    transform: translateY(-2px);
    box-shadow: 0 6px 8px rgba(0,0,0,0.15);
  }

  .banner-cta::after {
    content: '→';
    margin-left: 8px;
    transition: transform 0.3s ease;
  }

  .banner-cta:hover::after {
    transform: translateX(4px);
  }

  .banner-image-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .banner-wave {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: auto;
    z-index: -1;
  }

  .banner-wave--desktop {
    display: none;
  }

  @media screen and (min-width: 750px) {
    .banner-wave--mobile {
      display: none;
    }
    .banner-wave--desktop {
      display: block;
    }
  }

  /* Desktop */
  @media screen and (min-width: 1025px) {
    .banner-heading { 
      font-size: {{ section.settings.heading_size_desktop }}px; 
      text-align: {{ section.settings.heading_alignment }}; 
    }
    .banner-subheading { 
      font-size: {{ section.settings.subheading_size_desktop }}px; 
      text-align: {{ section.settings.subheading_alignment }}; 
    }
    .banner-cta { 
      font-size: {{ section.settings.button_text_size_desktop }}px; 
    }
    .banner-meta { 
      font-size: {{ section.settings.meta_size_desktop }}px; 
      text-align: {{ section.settings.meta_alignment }}; 
    }
    .rating-text { 
      font-size: {{ section.settings.rating_size_desktop }}px; 
    }
    .banner-image {
      max-width: {{ section.settings.image_max_width_desktop }}px;
    }
    .rating-container {
      justify-content: {{ section.settings.rating_alignment }};
    }
  }

  /* Tablet */
  @media screen and (max-width: 1024px) and (min-width: 750px) {
    .banner-heading { 
      font-size: {{ section.settings.heading_size_tablet }}px; 
      text-align: {{ section.settings.heading_alignment }}; 
    }
    .banner-subheading { 
      font-size: {{ section.settings.subheading_size_tablet }}px; 
      text-align: {{ section.settings.subheading_alignment }}; 
    }
    .banner-cta { 
      font-size: {{ section.settings.button_text_size_tablet }}px; 
    }
    .banner-meta { 
      font-size: {{ section.settings.meta_size_tablet }}px; 
      text-align: {{ section.settings.meta_alignment }}; 
    }
    .rating-text { 
      font-size: {{ section.settings.rating_size_tablet }}px; 
    }
    .banner-image {
      max-width: {{ section.settings.image_max_width_tablet }}px;
    }
    .rating-container {
      justify-content: {{ section.settings.rating_alignment }};
    }
  }

  /* Mobile */
  @media screen and (max-width: 749px) {
    .banner-heading { 
      font-size: {{ section.settings.heading_size_mobile }}px; 
      text-align: {{ section.settings.heading_alignment }}; 
    }
    .banner-subheading { 
      font-size: {{ section.settings.subheading_size_mobile }}px; 
      text-align: {{ section.settings.subheading_alignment }}; 
    }
    .banner-cta { 
      font-size: {{ section.settings.button_text_size_mobile }}px; 
    }
    .banner-meta { 
      font-size: {{ section.settings.meta_size_mobile }}px; 
      text-align: {{ section.settings.meta_alignment }}; 
    }
    .rating-text { 
      font-size: {{ section.settings.rating_size_mobile }}px; 
    }
    .banner-image {
      max-width: {{ section.settings.image_max_width_mobile }}px;
      margin: 0 auto;
    }
    .rating-container {
      justify-content: {{ section.settings.rating_alignment }};
    }
  }
  
</style>

<header class="banner-{{ section.id }}" role="banner">
  <!-- Wave -->
  <svg class="banner-wave banner-wave--mobile" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 900 150" preserveAspectRatio="none">
    <path fill="{{ section.settings.wave_color }}" d="M0,96L40,101.3C80,107,160,117,240,117.3C320,117,400,107,480,90.7C560,75,640,53,720,53.3C800,53,880,75,920,80L960,85L960,150L0,150Z"></path>
  </svg>
  <svg class="banner-wave banner-wave--desktop" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320" preserveAspectRatio="none">
    <path fill="{{ section.settings.wave_color }}" d="M0,160L48,165.3C96,171,192,181,288,181.3C384,181,480,171,576,154.7C672,139,768,117,864,117.3C960,117,1056,139,1152,144C1248,149,1344,139,1392,133.3L1440,128L1440,320L0,320Z"></path>
  </svg>

  <div class="page-width section-{{ section.id }}-padding banner-desktop-flex">
    <div class="banner-content">
      <{{ section.settings.heading_tag }} class="banner-heading">
        {{ section.settings.heading }}
      </{{ section.settings.heading_tag }}>

      {% if section.settings.subheading != blank %}
        <{{ section.settings.subheading_tag }} class="banner-subheading">
          {{ section.settings.subheading }}
        </{{ section.settings.subheading_tag }}>
      {% endif %}

      {% if section.settings.meta_description != blank %}
        <p class="banner-meta">
          {{ section.settings.meta_description }}
        </p>
      {% endif %}

      {% if section.settings.show_rating %}
        <div class="rating-container">
          <div class="rating-stars" aria-label="{{ section.settings.star_rating }} out of 5 stars">
            <span style="width: {{ section.settings.star_rating | times: 20 }}%;"></span>
          </div>
          <span class="rating-text">
            {{ section.settings.rating_text }}
          </span>
        </div>
      {% endif %}

      {% if section.settings.button_text != blank %}
        <a class="banner-cta" 
           href="{{ section.settings.button_link | default: '#' }}" 
           aria-label="{{ section.settings.button_text }}">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>

    {% if section.settings.image != blank %}
      <div class="banner-image-wrapper">
        <img class="banner-image"
             src="{{ section.settings.image | img_url: '1200x' }}"
             alt="{{ section.settings.image_alt | escape }}"
             loading="lazy">
      </div>
    {% endif %}
  </div>
</header>