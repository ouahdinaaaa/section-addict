<!doctype html>
<html   
  class="no-js{% if request.design_mode %} shopify-design-mode{% endif %}"   
  lang="{{ request.locale.iso_code }}"
>
  <head>
    {%- render 'stylesheets' -%} 

    {%- if settings.favicon != blank -%}
      <link
        rel="icon"
        type="image/png"
        href="{{ settings.favicon | image_url: width: 32, height: 32 }}"
      >
    {%- endif -%} 

    {% comment %} This a way to wait for main content to load when navigating to a new page so that the view transitions can work consistently {% endcomment %}
    <link
      rel="expect"
      href="#MainContent"
      blocking="render"
      id="view-transition-render-blocker"
    > 

    {%- render 'meta-tags' -%}
    {%- render 'fonts' -%}
    {%- render 'scripts' -%}
    {%- render 'theme-styles-variables' -%}
    {%- render 'color-schemes' -%} 

    {% if request.design_mode %}
      {%- render 'theme-editor' -%}
    {% endif %} 

    {{ content_for_header }}
  </head> 

  <body class="page-width-{{ settings.page_width }} card-hover-effect-{{ settings.card_hover_effect }}">
    {% render 'skip-to-content-link', href: '#MainContent', text: 'accessibility.skip_to_text' %}
    
    <div id="header-group">
      {% sections 'header-group' %}
    </div> 

    <script
      src="{{ 'critical.js' | asset_url }}"
      type="module"
      async
      blocking="render"
    ></script> 

    <main
      id="MainContent"
      class="content-for-layout"
      role="main"
      data-page-transition-enabled="{{ settings.page_transition_enabled }}"
      data-product-transition="{{ settings.transition_to_main_product }}"
      data-template="{{ template }}"
    >
      {{ content_for_layout }}
    </main> 

    {% sections 'footer-group' %} 

    {% render 'search-modal' %} 

    {% if settings.quick_add or settings.mobile_quick_add %}
      {% render 'quick-add-modal' %}
    {% endif %}

    <!-- INCLUSION DE VOTRE PRELOADER EXISTANT -->
    {% section 'preloader-cart' %}

    <!-- SCRIPT POUR ACTIVER LE PRELOADER -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const preloader = document.getElementById('preloader-cart');
        
        // Fonction pour afficher le preloader
        function showCartPreloader() {
          if (preloader) {
            preloader.style.display = 'flex';
            setTimeout(() => {
              preloader.classList.add('show');
            }, 10);
          }
        }
        
        // Fonction pour masquer le preloader
        function hideCartPreloader() {
          if (preloader) {
            preloader.classList.remove('show');
            setTimeout(() => {
              preloader.style.display = 'none';
            }, 300);
          }
        }

        // 1. CLIC SUR L'ICÔNE PANIER (header)
        document.addEventListener('click', function(e) {
          const cartIconSelectors = [
            '.cart-link',
            '.header__icon--cart',
            '[data-cart-drawer]',
            '.js-drawer-open-cart',
            '.cart-icon',
            '.header-cart',
            '.cart-count-bubble',
            'a[href="/cart"]',
            'a[href*="cart"]'
          ];
          
          const isCartIcon = cartIconSelectors.some(selector => {
            return e.target.matches(selector) || e.target.closest(selector);
          });
          
          if (isCartIcon) {
            showCartPreloader();
            setTimeout(hideCartPreloader, 1500);
          }
        });

        // 2. BOUTONS "AJOUTER AU PANIER"
        document.addEventListener('click', function(e) {
          const addToCartSelectors = [
            '[name="add"]',
            '.btn-cart',
            '.add-to-cart',
            '.product-form__cart-submit',
            '[data-add-to-cart]',
            '.js-ajax-submit',
            'button[type="submit"][name="add"]',
            '.product-form button[type="submit"]'
          ];
          
          const isAddToCart = addToCartSelectors.some(selector => {
            return e.target.matches(selector) || e.target.closest(selector);
          });
          
          if (isAddToCart) {
            showCartPreloader();
            setTimeout(hideCartPreloader, 2500);
          }
        });

        // 3. BOUTONS "CONTINUER MES ACHATS" / "CONTINUE SHOPPING"
        document.addEventListener('click', function(e) {
          const continueShoppingSelectors = [
            '.continue-shopping',
            '[data-continue-shopping]',
            '.btn-continue',
            '.cart__continue-shopping',
            'a[href*="collections"]',
            '.drawer__footer .button--secondary'
          ];
          
          const isContinueShopping = continueShoppingSelectors.some(selector => {
            return e.target.matches(selector) || e.target.closest(selector);
          });
          
          if (isContinueShopping && 
              (e.target.textContent.toLowerCase().includes('continuer') || 
               e.target.textContent.toLowerCase().includes('continue') ||
               e.target.textContent.toLowerCase().includes('shopping'))) {
            showCartPreloader();
            setTimeout(hideCartPreloader, 1000);
          }
        });

        // 4. BOUTONS "PASSER AU PAIEMENT" / "CHECKOUT"
        document.addEventListener('click', function(e) {
          const checkoutSelectors = [
            '.checkout',
            '[data-checkout]',
            '.btn-checkout',
            '.cart__checkout',
            'input[name="checkout"]',
            'button[name="checkout"]',
            '.drawer__footer .button--primary',
            'a[href*="checkout"]',
            '.cart-drawer__checkout'
          ];
          
          const isCheckout = checkoutSelectors.some(selector => {
            return e.target.matches(selector) || e.target.closest(selector);
          });
          
          if (isCheckout || 
              (e.target.textContent.toLowerCase().includes('checkout') || 
               e.target.textContent.toLowerCase().includes('paiement') ||
               e.target.textContent.toLowerCase().includes('commander'))) {
            showCartPreloader();
            // Plus long pour le checkout car redirection
            setTimeout(hideCartPreloader, 3000);
          }
        });

        // 5. DÉTECTION DES REQUÊTES AJAX CART (si votre thème les utilise)
        if (typeof fetch !== 'undefined') {
          const originalFetch = window.fetch;
          window.fetch = function(...args) {
            const url = args[0];
            if (typeof url === 'string') {
              // Ajout au panier via AJAX
              if (url.includes('/cart/add') || url.includes('cart/add.js')) {
                showCartPreloader();
                setTimeout(hideCartPreloader, 2000);
              }
              // Mise à jour du panier
              else if (url.includes('/cart/update') || url.includes('cart/update.js')) {
                showCartPreloader();
                setTimeout(hideCartPreloader, 1500);
              }
            }
            return originalFetch.apply(this, args);
          };
        }

        // 6. ÉCOUTE DES ÉVÉNEMENTS SHOPIFY CUSTOM (si disponibles)
        document.addEventListener('cart:item-added', function() {
          showCartPreloader();
          setTimeout(hideCartPreloader, 2000);
        });

        document.addEventListener('cart:updated', function() {
          showCartPreloader();
          setTimeout(hideCartPreloader, 2000);
        });
      });
    </script>

  </body>
</html>