    .truth-points li::before {
      left: 10px;
      top: 6px;
      border-left: 7px solid #8b0000;
      border-top: 3px solid transparent;
      border-bottom: 3px solid transparent;
    }

    .classified-stamp1 {
      font-size: {{ section.settings.stamp_size_tablet | default: 0.5 }}rem;
      padding: 3px 8px;
    }

    .truth-card {
      padding: 20px;
      min-height: 350px;
    }

    .truth-cta {
      padding: 15px 35px;
      font-size: 1.7rem;
    }
  }

  /* MEDIA QUERIES MOBILE - max 890px */
  @media (max-width: 890px) {
    .truth-title {
      font-size: {{ section.settings.title_size_mobile | default: 2.2 }}rem;
      letter-spacing: 1px;
    }

    .truth-subtitle {
      font-size: {{ section.settings.subtitle_size_mobile | default: 1 }}rem;
    }
    
    .truth-card {
      padding: 15px;
      min-height: 300px;
    }

    .card-icon {
      font-size: {{ section.settings.icon_size_mobile | default: 1.5 }}rem;
      margin-bottom: 10px;
    }

    .card-title {
      font-size: {{ section.settings.card_title_size_mobile | default: 0.9 }}rem;
      margin-bottom: 12px;
      line-height: 1.2;
    }

    .truth-points li {
      font-size: {{ section.settings.list_size_mobile | default: 0.7 }}rem;
      margin-bottom: 8px;
      line-height: 1.3;
      padding-left: 25px;
    }

    /* Triangles mobile - plus petits et bien rouges */
    .truth-points li::before {
      left: 8px;
      top: 6px;
      border-left: 6px solid #8b0000;
      border-top: 3px solid transparent;
      border-bottom: 3px solid transparent;
    }

    .truth-points li:hover {
      padding-left: 28px;
    }

    .truth-points li:hover::before {
      border-left-color: #ffffff;
    }

    .classified-stamp1 {
      font-size: {{ section.settings.stamp_size_mobile | default: 0.4 }}rem;
      padding: 2px 6px;
      right: -10px;
    }

    .truth-cta {
      padding: 12px 20px;
      font-size: 1.4rem;
      letter-spacing: 1px;
    }
  }

  /* MEDIA QUERIES TRÈS PETIT MOBILE - max 480px */
  @media (max-width: 480px) {
    .truth-card {
      padding: 10px;
      min-height: 280px;
    }

    .truth-points li {
      font-size: {{ section.settings.list_size_mobile | default: 0.6 }}rem;
    }

    .card-title {
      font-size: {{ section.settings.card_title_size_mobile | default: 0.8 }}rem;
    }

    /* Triangles très petit mobile */
    .truth-points li::before {
      left: 6px;
      top: 5px;
      border-left: 5px solid #8b0000;
      border-top: 2px solid transparent;
      border-bottom: 2px solid transparent;
    }
  }

  .card-icon {
  display: block;
  text-align: center;
  margin-bottom: 25px;
  width: 60px;
  height: 60px;
  object-fit: contain;
  margin-left: auto;
  margin-right: auto;
  filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.3));
