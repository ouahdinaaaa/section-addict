  .truth-section {
    background: {{ section.settings.section_background | default: 'linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 30%, #16213e 70%, #000000 100%)' }};
    padding: 100px 0;
    position: relative;
    overflow: hidden;
    color: #ffffff;
    font-family: 'Roboto Condensed', sans-serif;
  }

  .truth-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 15% 20%, rgba(139, 0, 0, 0.2) 0%, transparent 40%),
      radial-gradient(circle at 85% 80%, rgba(16, 33, 62, 0.3) 0%, transparent 50%),
      linear-gradient(45deg, transparent 30%, rgba(139, 0, 0, 0.1) 50%, transparent 70%);
    animation: shadowPulse 12s ease-in-out infinite alternate;
  }

  @keyframes shadowPulse {
    0% { opacity: 0.7; }
    100% { opacity: 1; }
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 2;
  }

  .truth-header {
    text-align: center;
  }

  /* TAILLES DESKTOP PAR DÉFAUT */
  .truth-title {
    font-family: 'Oswald', sans-serif;
    font-size: {{ section.settings.title_size_desktop | default: 4 }}rem;
    font-weight: 600;
    margin-bottom: 20px;
    background: linear-gradient(45deg, {{ section.settings.title_color | default: '#8b0000' }}, #ff0000, {{ section.settings.title_color | default: '#8b0000' }});
    background-size: 300% 300%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: titleGlow 4s ease-in-out infinite;
    text-transform: uppercase;
    letter-spacing: 3px;
    text-shadow: 0 0 20px rgba(139, 0, 0, 0.5);
  }

  .truth-subtitle {
    font-size: {{ section.settings.subtitle_size_desktop | default: 1.4 }}rem;
    color: {{ section.settings.subtitle_color | default: '#b0b0b0' }};
    margin-bottom: 30px;
    font-weight: 300;
    opacity: 0;
    animation: fadeInUp 1s ease-out 0.5s forwards;
  }

  .card-icon {
    font-size: {{ section.settings.icon_size_desktop | default: 2.5 }}rem;
    margin-bottom: 25px;
    display: block;
    text-align: center;
    filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.3));
  }

  .card-title {
    font-family: 'Oswald', sans-serif;
    font-size: {{ section.settings.card_title_size_desktop | default: 1.6 }}rem;
    font-weight: 600;
    margin-bottom: 25px;
    color: #ffffff;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 1px;
    line-height: 1.3;
  }

  .truth-points li {
    margin-bottom: 18px;
    padding-left: 40px;
    position: relative;
    color: #d0d0d0;
    line-height: 1.7;
    font-size: {{ section.settings.list_size_desktop | default: 1 }}rem;
    opacity: 0;
    animation: fadeInLeft 0.6s ease-out forwards;
    border-left: 2px solid transparent;
    transition: all 0.3s ease;
  }

.classified-stamp1 {
  position: absolute;
  right: 5px; /* sort clairement à droite */
  background: rgb(0, 0, 0);
  color:rgb(190, 2, 2);
  padding: 10px 25px;
  font-size: 1rem;
  font-weight: 700;
  text-transform: uppercase;
  border: 2px dashed #8b0000;
  border-radius: 4px;
  transform: rotate(12deg);
  letter-spacing: 2px;
  opacity: 0.9;
  white-space: nowrap;
  pointer-events: none;
  z-index: 9999; /* toujours au-dessus */
  top : 10px;
}


  @keyframes titleGlow {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .warning-badge {
    display: inline-block;
    background: rgba(139, 0, 0, 0.8);
    color: white;
    padding: 8px 20px;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 1px;
    border: 1px solid #8b0000;
    animation: pulseWarning 3s ease-in-out infinite;
  }

  @keyframes pulseWarning {
    0%, 100% { 
      box-shadow: 0 0 10px rgba(139, 0, 0, 0.3);
      transform: scale(1);
    }
    50% { 
      box-shadow: 0 0 20px rgba(139, 0, 0, 0.6);
      transform: scale(1.05);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .truth-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 40px;
    margin-bottom: 80px;
  }

  @media (min-width: 900px) {
    .truth-grid {
      gap: 25px;
    }
        .truth-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 15px;
    }
  }

  @media (min-width: 570px) {
    .truth-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }
  }

  @media (max-width: 480px) {
    .truth-grid {
      grid-template-columns: repeat(1, 3fr);
      gap: 10px;
    }
  }

.truth-card {
  background: {{ section.settings.card_background | default: 'rgba(10, 10, 10, 0.9)' }};
  border: 2px solid #16213e;
  border-radius: 8px;
  padding: 35px;
  position: relative;
  /* overflow: hidden;  ❌ à enlever sinon ça coupe le tampon */
  overflow: visible; /* ✅ permet au tampon de dépasser */
  backdrop-filter: blur(5px);
  transform: translateY(50px);
  opacity: 0;
  animation: slideInUp 0.8s ease-out forwards;
  transition: all 0.4s ease;
  min-height: 400px;
  display: flex;
  flex-direction: column;
  z-index: 1; /* carte en dessous */
}

  .truth-card:nth-child(1) { animation-delay: 0.2s; }
  .truth-card:nth-child(2) { animation-delay: 0.4s; }
  .truth-card:nth-child(3) { animation-delay: 0.6s; }

  @keyframes slideInUp {
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .truth-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, #8b0000, #16213e, #000000);
    opacity: 0;
    transition: opacity 0.3s ease;
    border-radius: 8px;
  }

  .truth-card:hover::before {
    opacity: 0.1;
  }

  .truth-card:hover {
    transform: translateY(-8px);
    border-color: #8b0000;
    box-shadow: 0 15px 30px rgba(139, 0, 0, 0.3);
  }

  .card-content {
    position: relative;
    z-index: 2;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .truth-points {
    list-style: none;
    padding: 0;
    flex: 1;
  }

  .truth-points li:hover {
    color: #ffffff;
    border-left-color: #8b0000;
    padding-left: 45px;
  }

  .truth-points li:nth-child(1) { animation-delay: 0.8s; }
  .truth-points li:nth-child(2) { animation-delay: 1s; }
  .truth-points li:nth-child(3) { animation-delay: 1.2s; }
  .truth-points li:nth-child(4) { animation-delay: 1.4s; }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* TRIANGLES CSS PURS - GARANTIS ROUGES SUR TOUS APPAREILS */
  .truth-points li::before {
    content: '';
    position: absolute;
    left: 12px;
    top: 8px;
    width: 0;
    height: 0;
    border-left: 8px solid #8b0000;
    border-top: 4px solid transparent;
    border-bottom: 4px solid transparent;
    transition: all 0.3s ease;
  }

  .truth-points li:hover::before {
    border-left-color: #ffffff;
    transform: translateX(3px);
  }

  .cta-section {
    text-align: center;
    margin-top: 80px;
  }

  .truth-cta {
    display: inline-block;
    background: linear-gradient(45deg, #8b0000, #16213e);
    color: white;
    padding: 20px 50px;
    border-radius: 5px;
    text-decoration: none;
    font-family: 'Oswald', sans-serif;
    font-weight: 600;
    font-size: 1.3rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    transition: all 0.4s ease;
    border: 2px solid #8b0000;
    position: relative;
    overflow: hidden;
  }

  .truth-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
    transition: left 0.5s ease;
  }

  .truth-cta:hover::before {
    left: 100%;
  }

  .truth-cta:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(139, 0, 0, 0.4);
    background: linear-gradient(45deg, #a00000, #1e2a4a);
  }

  .network-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.1;
    z-index: 1;
    background-image: 
      linear-gradient(90deg, rgba(139,0,0,0.1) 1px, transparent 1px),
      linear-gradient(rgba(139,0,0,0.1) 1px, transparent 1px);
    background-size: 50px 50px;
    animation: networkMove 20s linear infinite;
  }

  @keyframes networkMove {
    0% { transform: translate(0, 0); }
    100% { transform: translate(50px, 50px); }
  }

  /* MEDIA QUERIES TABLETTE - 891px à 1024px */
  @media (max-width: 1024px) and (min-width: 891px) {
