<div class="featured-products-{{ section.id }}">
  {% if section.settings.section_title != blank %}
    <h2 class="section-title">{{ section.settings.section_title }}</h2>
  {% endif %}
  
  <div class="main-container">
    <!-- Image hero à gauche -->
    <div class="hero-image-container">
      <img 
        id="hero-image-{{ section.id }}"
        src="{% if section.blocks.first.settings.custom_image != blank %}{{ section.blocks.first.settings.custom_image | image_url: width: 800 }}{% elsif section.blocks.first.settings.product.featured_image != blank %}{{ section.blocks.first.settings.product.featured_image | image_url: width: 800 }}{% else %}{{ section.settings.hero_image | image_url: width: 800 }}{% endif %}" 
        alt="Featured Product"
        class="hero-image"
        loading="lazy"
      >
      
      <div class="hero-content">
        <h3 id="hero-title-{{ section.id }}" class="hero-title">
          {% if section.blocks.first.settings.custom_title != blank %}
            {{ section.blocks.first.settings.custom_title }}
          {% elsif section.blocks.first.settings.product != blank %}
            {{ section.blocks.first.settings.product.title }}
          {% else %}
            {{ section.settings.hero_title | default: 'Basics Refresh' }}
          {% endif %}
        </h3>
        <p id="hero-subtitle-{{ section.id }}" class="hero-subtitle">{{ section.settings.hero_subtitle | default: 'Summer essentials and more' }}</p>
      </div>

      <!-- Flèches de navigation -->
      <div class="nav-arrows">
        <button class="nav-arrow" id="prev-{{ section.id }}" onclick="changeProduct('{{ section.id }}', 'prev')">
          <svg viewBox="0 0 24 24"><path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/></svg>
        </button>
        <button class="nav-arrow" id="next-{{ section.id }}" onclick="changeProduct('{{ section.id }}', 'next')">
          <svg viewBox="0 0 24 24"><path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/></svg>
        </button>
      </div>
    </div>
    
    <!-- Section des produits à droite -->
    <div class="products-section">
      <div class="products-container">
        <div class="products-scroll" id="products-scroll-{{ section.id }}">
          {% for block in section.blocks %}
            {% assign product = all_products[block.settings.product] %}
            {% if product != blank %}
              <div class="product-card {% if forloop.first %}active{% endif %}" 
                   data-index="{{ forloop.index0 }}"
                   data-product-id="{{ product.id }}"
                   data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                   onclick="selectProduct('{{ section.id }}', {{ forloop.index0 }}, this)">
                <div class="product-image-container">
                  {% assign featured_image = product.featured_image %}
                  {% if block.settings.custom_image != blank %}
                    {% assign featured_image = block.settings.custom_image %}
                  {% endif %}
                  
                  <img 
                    src="{{ featured_image | image_url: width: 200 }}" 
                    alt="{{ product.title }}"
                    class="product-image"
                    loading="lazy"
                  >
                </div>
                
                <div class="product-info">
                  <h3 class="product-title">{{ block.settings.custom_title | default: product.title }}</h3>
                  {% if block.settings.product_dimensions != blank %}
                    <p class="product-dimensions">{{ block.settings.product_dimensions }}</p>
                  {% endif %}
                  
                  <div class="product-price">
                    {% if block.settings.compare_price != blank and block.settings.compare_price > product.price %}
                      <span class="price-was">{{ block.settings.compare_price | money }}</span>
                    {% endif %}
                    {{ product.price | money }}
                  </div>
                  
                  <button 
                    class="add-to-cart-btn"
                    onclick="addToCart(event, this)"
                  >
                    {{ section.settings.button_text | default: 'Shop Now' }}
                  </button>
                </div>

                <!-- Données cachées pour JavaScript -->
                <script type="application/json" class="product-data">
                {
                  "id": {{ product.id | json }},
                  "title": {{ block.settings.custom_title | default: product.title | json }},
                  "image": {{ featured_image | image_url: width: 800 | json }},
                  "url": {{ product.url | json }},
                  "variantId": {{ product.selected_or_first_available_variant.id | json }}
                }
                </script>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
      
      <!-- Bouton principal d'ajout au panier (tablette/desktop) -->
      <div class="main-add-to-cart">
        <button 
          class="main-add-to-cart-btn"
          id="main-add-to-cart-{{ section.id }}"
          data-variant-id="{% if section.blocks.first.settings.product != blank %}{{ section.blocks.first.settings.product.selected_or_first_available_variant.id }}{% endif %}"
          onclick="addToCartMain(event, this, '{{ section.id }}')"
        >
          {{ section.settings.button_text | default: 'Shop Now' }}
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  let currentProductIndex = {};
  let productData = {};

  // Initialisation
  document.addEventListener('DOMContentLoaded', function() {
    const sectionId = '{{ section.id }}';
    currentProductIndex[sectionId] = 0;
    productData[sectionId] = [];
    
    // Collecte des données produits
    const productCards = document.querySelectorAll('.featured-products-' + sectionId + ' .product-card');
    productCards.forEach((card, index) => {
      const dataScript = card.querySelector('.product-data');
      if (dataScript) {
        productData[sectionId][index] = JSON.parse(dataScript.textContent);
      }
    });
    
    updateNavigationButtons(sectionId);
  });

  function selectProduct(sectionId, index, element) {
    currentProductIndex[sectionId] = index;
    
    // Mise à jour de l'état actif
    const allCards = document.querySelectorAll('.featured-products-' + sectionId + ' .product-card');
    allCards.forEach(card => card.classList.remove('active'));
    element.classList.add('active');
    
    // Mise à jour de l'image hero
    updateHeroImage(sectionId, index);
    updateMainButton(sectionId, index);
    updateNavigationButtons(sectionId);
  }

  function changeProduct(sectionId, direction) {
    const totalProducts = productData[sectionId].length;
    let newIndex = currentProductIndex[sectionId];
    
    if (direction === 'next') {
      newIndex = (newIndex + 1) % totalProducts;
    } else {
      newIndex = (newIndex - 1 + totalProducts) % totalProducts;
    }
    
    const targetCard = document.querySelector('.featured-products-' + sectionId + ' .product-card[data-index="' + newIndex + '"]');
    if (targetCard) {
      selectProduct(sectionId, newIndex, targetCard);
      
      // Scroll vers le produit (mobile)
      if (window.innerWidth < 750) {
        targetCard.scrollIntoView({ behavior: 'smooth', inline: 'center' });
      }
    }
  }

  function updateHeroImage(sectionId, index) {
    const heroImage = document.getElementById('hero-image-' + sectionId);
    const heroTitle = document.getElementById('hero-title-' + sectionId);
    
    if (productData[sectionId][index]) {
      const product = productData[sectionId][index];
      heroImage.src = product.image;
      heroImage.alt = product.title;
      heroTitle.textContent = product.title;
    }
  }

  function updateMainButton(sectionId, index) {
    const mainButton = document.getElementById('main-add-to-cart-' + sectionId);
    if (mainButton && productData[sectionId][index]) {
      mainButton.dataset.variantId = productData[sectionId][index].variantId;
    }
  }

  function updateNavigationButtons(sectionId) {
    const prevBtn = document.getElementById('prev-' + sectionId);
    const nextBtn = document.getElementById('next-' + sectionId);
    const totalProducts = productData[sectionId].length;
    const currentIndex = currentProductIndex[sectionId];
    
    if (prevBtn && nextBtn) {
      prevBtn.disabled = currentIndex === 0;
      nextBtn.disabled = currentIndex === totalProducts - 1;
    }
  }

  function addToCart(event, button) {
    event.preventDefault();
    event.stopPropagation();
    
    const card = button.closest('.product-card');
    const variantId = card.dataset.variantId;
    
    performAddToCart(button, variantId);
  }

  function addToCartMain(event, button, sectionId) {
    event.preventDefault();
    const variantId = button.dataset.variantId;
    performAddToCart(button, variantId);
  }

  function performAddToCart(button, variantId) {
    if (!variantId) {
      console.error('Variant ID not found');
      return;
    }
    
    const originalText = button.innerText;
    button.innerText = 'Adding...';
    button.disabled = true;
    
    fetch('/cart/add.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        items: [{
          id: variantId,
          quantity: 1
        }]
      })
    })
    .then(response => response.json())
    .then(data => {
      button.innerText = 'Added ✓';
      button.style.backgroundColor = '#28a745';
      
      setTimeout(() => {
        button.innerText = originalText;
        button.style.backgroundColor = '{{ section.settings.button_bg_color }}';
        button.disabled = false;
      }, 2000);
    })
    .catch((error) => {
      console.error('Error:', error);
      button.innerText = 'Error';
      button.style.backgroundColor = '#dc3545';
      
      setTimeout(() => {
        button.innerText = originalText;
        button.style.backgroundColor = '{{ section.settings.button_bg_color }}';
        button.disabled = false;
      }, 2000);
    });
  }
</script>

