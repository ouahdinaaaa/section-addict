{% schema %}
{
  "name": "Infinite Logo Slider",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Couleur de fond",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "height_desktop",
      "label": "Hauteur (desktop en px)",
      "min": 50,
      "max": 300,
      "step": 10,
      "default": 100
    },
    {
      "type": "range",
      "id": "height_tablet",
      "label": "Hauteur (tablette en px)",
      "min": 50,
      "max": 300,
      "step": 10,
      "default": 80
    },
    {
      "type": "range",
      "id": "height_mobile",
      "label": "Hauteur (mobile en px)",
      "min": 50,
      "max": 300,
      "step": 10,
      "default": 60
    },
    {
      "type": "range",
      "id": "speed_desktop",
      "label": "Vitesse (desktop, secondes)",
      "min": 5,
      "max": 100,
      "step": 1,
      "default": 40
    },
    {
      "type": "range",
      "id": "speed_tablet",
      "label": "Vitesse (tablette, secondes)",
      "min": 5,
      "max": 100,
      "step": 1,
      "default": 30
    },
    {
      "type": "range",
      "id": "speed_mobile",
      "label": "Vitesse (mobile, secondes)",
      "min": 5,
      "max": 100,
      "step": 1,
      "default": 20
    },
    {
      "type": "range",
      "id": "logo_size_desktop",
      "label": "Largeur logo (desktop en px)",
      "min": 50,
      "max": 500,
      "step": 10,
      "default": 250
    },
    {
      "type": "range",
      "id": "logo_size_tablet",
      "label": "Largeur logo (tablette en px)",
      "min": 50,
      "max": 500,
      "step": 10,
      "default": 200
    },
    {
      "type": "range",
      "id": "logo_size_mobile",
      "label": "Largeur logo (mobile en px)",
      "min": 50,
      "max": 500,
      "step": 10,
      "default": 150
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Infinite Logo Slider",
      "category": "Image"
    }
  ]
}
{% endschema %}

<div class="logo-slider" style="background-color: {{ section.settings.background_color }};">
  <div class="slide-track">
    {% for block in section.blocks %}
      {% if block.settings.logo_image %}
        <div class="slide">
          <img src="{{ block.settings.logo_image | image_url }}" alt="logo" />
        </div>
      {% endif %}
    {% endfor %}
    {% for block in section.blocks %}
      {% if block.settings.logo_image %}
        <div class="slide">
          <img src="{{ block.settings.logo_image | image_url }}" alt="logo" />
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
.logo-slider {
  position: relative;
  overflow: hidden;
  margin: auto;
}

.logo-slider .slide-track {
  display: flex;
  width: max-content;
}

.logo-slider .slide {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Images responsive */
.logo-slider .slide img {
  height: auto;
}

/* Desktop */
@media (min-width: 1025px) {
  .logo-slider {
    height: {{ section.settings.height_desktop }}px;
  }
  .logo-slider .slide-track {
    animation: scroll-desktop {{ section.settings.speed_desktop }}s linear infinite;
  }
  .logo-slider .slide img {
    width: {{ section.settings.logo_size_desktop }}px;
  }
}

/* Tablet */
@media (min-width: 768px) and (max-width: 1024px) {
  .logo-slider {
    height: {{ section.settings.height_tablet }}px;
  }
  .logo-slider .slide-track {
    animation: scroll-tablet {{ section.settings.speed_tablet }}s linear infinite;
  }
  .logo-slider .slide img {
    width: {{ section.settings.logo_size_tablet }}px;
  }
}

/* Mobile */
@media (max-width: 767px) {
  .logo-slider {
    height: {{ section.settings.height_mobile }}px;
  }
  .logo-slider .slide-track {
    animation: scroll-mobile {{ section.settings.speed_mobile }}s linear infinite;
  }
  .logo-slider .slide img {
    width: {{ section.settings.logo_size_mobile }}px;
  }
}

/* Animations */
@keyframes scroll-desktop {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}
@keyframes scroll-tablet {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}
@keyframes scroll-mobile {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}
</style>
