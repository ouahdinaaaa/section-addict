      "default": 18,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "title_size_mobile",
      "label": "Taille du titre (mobile)",
      "min": 12,
      "max": 48,
      "default": 24,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "subtitle_size_mobile",
      "label": "Taille du sous-titre (mobile)",
      "min": 10,
      "max": 32,
      "default": 14,
      "unit": "px"
    },
    {
      "type": "color_background",
      "id": "button_color",
      "label": "Couleur du bouton",
      "default": "#712b96"
    },
    {
      "type": "range",
      "id": "button_size_desktop",
      "label": "Taille du texte du bouton (desktop)",
      "min": 10,
      "max": 36,
      "default": 18,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "button_size_mobile",
      "label": "Taille du texte du bouton (mobile)",
      "min": 10,
      "max": 28,
      "default": 14,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "scroll_speed_desktop",
      "label": "Vitesse de scroll (desktop, en secondes)",
      "min": 5,
      "max": 60,
      "default": 20,
      "unit": "s"
    },
    {
      "type": "range",
      "id": "scroll_speed_mobile",
      "label": "Vitesse de scroll (mobile, en secondes)",
      "min": 5,
      "max": 60,
      "default": 30,
      "unit": "s"
    },
    {
      "type": "checkbox",
      "id": "bold_text",
      "label": "Mettre le texte en gras",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "neon_effect",
      "label": "Activer l'effet néon sur les textes",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image de jeu",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Jeux cultes rétro",
      "category": "Bannière"
    }
  ]
}
