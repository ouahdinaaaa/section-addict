{% schema %}
{
  "name": "Section Jeux Cultes",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre principal",
      "default": "Explore les jeux cultes inclus dans la console"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Sous-titre",
      "default": "Retrouve les classiques de ton enfance et fais défiler les pépites rétro qui t’attendent ✨"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Lien du bouton"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texte du bouton",
      "default": "Découvrir tous les jeux"
    },
    {
