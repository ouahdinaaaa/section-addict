<section class="cult-games-section">
  <div class="text-block">
    <h2 class="title" style="font-size: 30px;
    background: linear-gradient(90deg, #FFD700, #ff00c8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: 900;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
    text-shadow: 0 0 10px rgba(255, 0, 200, 0.5);">
      {{ section.settings.title }}
    </h2>
    <p class="subtitle {% if section.settings.neon_effect %}neon{% endif %}"
       style="color: {{ section.settings.subtitle_color }};
              font-size: {{ section.settings.subtitle_size_desktop }}px;
              {% if section.settings.bold_text %}font-weight: bold;{% endif %}">
      {{ section.settings.subtitle }}
    </p>
  </div>

  <div class="scroll-wrapper">
    <div class="scroll-track" style="--scroll-speed: {{ section.settings.scroll_speed_desktop }}s; --scroll-speed-mobile: {{ section.settings.scroll_speed_mobile }}s;">
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
          <div class="game-image"><img src="{{ block.settings.image | image_url: width: 400 }}" alt="Jeu" /></div>
        {% endif %}
      {% endfor %}
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
          <div class="game-image"><img src="{{ block.settings.image | image_url: width: 400 }}" alt="Jeu" /></div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <div class="button-wrapper">
    <a href="{{ section.settings.link }}" class="discover-btn"
       style="background: {{ section.settings.button_color }};
              font-size: {{ section.settings.button_size_desktop }}px;">
      {{ section.settings.button_label }}
    </a>
  </div>
</section>

<style>

.title h2 {
    font-size: 42px;
    background: linear-gradient(90deg, #FFD700, #ff00c8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: 900;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
    text-shadow: 0 0 10px rgba(255, 0, 200, 0.5);
}


  
  .cult-games-section {
    text-align: center;
    background : linear-gradient(to bottom, #000000, #120024);
    color: white;
    overflow: hidden;
  }

  .cult-games-section .neon {
    text-shadow: 0 0 5px #fff, 0 0 10px #c832fa, 0 0 20px #c832fa;
  }

  .scroll-wrapper {
    width: 100%;
    overflow: hidden;
    margin: 30px 0;
  }

  .scroll-track {
    display: flex;
    width: max-content;
    gap: 20px;
    animation: scroll-left linear infinite;
    animation-duration: var(--scroll-speed);
  }

  .game-image img {
    width: 220px;
    height: auto;
    border-radius: 12px;
    flex-shrink: 0;
  }

  .discover-btn {
    display: inline-block;
    padding: 12px 24px;
    color: white;
    border-radius: 8px;
    text-decoration: none;
    font-weight: bold;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .discover-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 0 10px #fff, 0 0 20px #c832fa;
  }

  @keyframes scroll-left {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media screen and (max-width: 768px) {
    .cult-games-section .title {
      font-size: {{ section.settings.title_size_mobile }}px;
    }

    .cult-games-section .subtitle {
      font-size: {{ section.settings.subtitle_size_mobile }}px;
    }

    .discover-btn {
      font-size: {{ section.settings.button_size_mobile }}px;
    }

    .scroll-track {
      animation-duration: var(--scroll-speed-mobile) !important;
    }
  }
</style>

