{% schema %}
{
  "name": "Accordion Collections",
  "settings": [
    {
      "type": "color",
      "id": "section_bg",
      "label": "Couleur de fond de la section",
      "default": "#f0f0f0"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Couleur de l’overlay sur l’image",
      "default": "rgba(0,0,0,0.45)"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Couleur du texte",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Alignement du texte descriptif",
      "options": [
        { "value": "left", "label": "Gauche" },
        { "value": "center", "label": "Centre" },
        { "value": "right", "label": "Droite" }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "title_size_desktop",
      "label": "Taille titre (desktop, px)",
      "min": 12,
      "max": 60,
      "step": 1,
      "default": 24
    },
    {
      "type": "range",
      "id": "title_size_tablet",
      "label": "Taille titre (tablette, px)",
      "min": 12,
      "max": 60,
      "step": 1,
      "default": 20
    },
    {
      "type": "range",
      "id": "title_size_mobile",
      "label": "Taille titre (mobile, px)",
      "min": 12,
      "max": 60,
      "step": 1,
      "default": 18
    },
    {
      "type": "range",
      "id": "desc_size_desktop",
      "label": "Taille description (desktop, px)",
      "min": 10,
      "max": 40,
      "step": 1,
      "default": 16
    },
    {
      "type": "range",
      "id": "desc_size_tablet",
      "label": "Taille description (tablette, px)",
      "min": 10,
      "max": 40,
      "step": 1,
      "default": 14
    },
    {
      "type": "range",
      "id": "desc_size_mobile",
      "label": "Taille description (mobile, px)",
      "min": 10,
      "max": 40,
      "step": 1,
      "default": 12
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection liée"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Produit (optionnel, prioritaire si choisi)"
        },
        {
          "type": "image_picker",
          "id": "bg_image",
          "label": "Image de fond"
        },
        {
          "type": "text",
          "id": "vertical_text",
          "label": "Texte vertical"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titre"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Accordion Collections",
      "category": "Custom",
      "blocks": [
        { "type": "item", "settings": { "vertical_text": "Collection 1", "title": "Titre 1", "description": "Description 1" } },
        { "type": "item", "settings": { "vertical_text": "Collection 2", "title": "Titre 2", "description": "Description 2" } },
        { "type": "item", "settings": { "vertical_text": "Collection 3", "title": "Titre 3", "description": "Description 3" } },
        { "type": "item", "settings": { "vertical_text": "Collection 4", "title": "Titre 4", "description": "Description 4" } },
        { "type": "item", "settings": { "vertical_text": "Collection 5", "title": "Titre 5", "description": "Description 5" } }
      ]
    }
  ]
}
{% endschema %}

<section class="accordion-section" style="background: {{ section.settings.section_bg }};">
  <div class="gallery-wrap">
    {% for block in section.blocks %}
      {% assign link_url = block.settings.collection.url %}
      {% if block.settings.product != blank %}
        {% assign link_url = block.settings.product.url %}
      {% endif %}
      <div class="item"
           style="background-image:url({{ block.settings.bg_image | img_url: '1600x' }});"
           onclick="window.location.href='{{ link_url }}'">
        <div class="item-vertical-title">{{ block.settings.vertical_text }}</div>
        <div class="item-content" style="text-align: {{ section.settings.text_align }};">
          <h2 class="item-title">{{ block.settings.title }}</h2>
          <p class="item-description">{{ block.settings.description }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</section>
<style>
.accordion-section .gallery-wrap {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 70vh;
  overflow: hidden;
}

.accordion-section .item {
  flex: 1;
  height: 100%;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  transition: all 0.6s ease-in-out;
  position: relative;
  overflow: hidden;
  cursor: pointer;
}

.accordion-section .item:hover { flex: 3; }

.accordion-section .item::after {
  content: '';
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: {{ section.settings.overlay_color }};
  opacity: 0;
  transition: opacity 0.3s ease;
}
.accordion-section .item:hover::after { opacity: 1; }

.accordion-section .item-content {
  position: absolute;
  bottom: 20px;
  left: 20px;
  right: 20px;
  color: {{ section.settings.text_color }};
  opacity: 0;
  transform: translateY(20px);
  transition: all 0.4s ease;
  z-index: 2;
}
.accordion-section .item:hover .item-content {
  opacity: 1;
  transform: translateY(0);
}

.accordion-section .item-title {
  font-weight: 700;
  margin-bottom: 10px;
  font-size: {{ section.settings.title_size_desktop }}px;
}
.accordion-section .item-description {
  font-size: {{ section.settings.desc_size_desktop }}px;
}

.accordion-section .item-vertical-title {
  position: absolute;
  top: 50%; left: 50%;
  transform: translate(-50%, -50%) rotate(-90deg);
  transform-origin: center;
  font-size: 28px;
  font-weight: bold;
  color: {{ section.settings.text_color }};
  opacity: 0.85;
  transition: opacity 0.4s ease, transform 0.4s ease;
  white-space: nowrap;
  pointer-events: none;
  z-index: 2;
  text-shadow: 2px 2px 6px rgba(0,0,0,0.6);
}
.accordion-section .item:hover .item-vertical-title {
  opacity: 0;
  transform: translate(-50%, -50%) rotate(-90deg) scale(0.9);
}

/* Responsive : on garde l’accordéon en ligne */
@media (max-width: 1024px) {
  .accordion-section .item-title { font-size: {{ section.settings.title_size_tablet }}px; }
  .accordion-section .item-description { font-size: {{ section.settings.desc_size_tablet }}px; }
}
@media (max-width: 767px) {
  .accordion-section .item-title { font-size: {{ section.settings.title_size_mobile }}px; }
  .accordion-section .item-description { font-size: {{ section.settings.desc_size_mobile }}px; }
  .accordion-section .gallery-wrap { height: 60vh; } /* garde la ligne, réduit la hauteur */
}
</style>
