<style>
  .social-section {
    background-color: #fff;
    font-family: 'Quicksand', sans-serif;
    color: #000;
    text-align: {{ section.settings.title_align }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .container-social {
    max-width: 1200px;
    margin: 0 auto;
    padding-left: {{ section.settings.padding_left_desktop }}px;
    padding-right: {{ section.settings.padding_right_desktop }}px;
  }

  .container-social h2 {
    font-size: {{ section.settings.title_size }}px;
    font-weight: {% if section.settings.title_bold %}bold{% else %}normal{% endif %};
    color: {{ section.settings.title_color }};
    margin-bottom: 20px;
  }

  .social-icons {
    display: flex;
    gap: {{ section.settings.icon_gap_desktop }}px;
    margin-top: 10px;
  }

  .social-icons a img {
    width: {{ section.settings.icon_size_desktop }}px;
    height: {{ section.settings.icon_size_desktop }}px;
    transition: transform 0.3s ease;
  }

  .social-icons a img:hover {
    transform: scale(1.1);
  }

  @media (max-width: 767px) {
    .container-social {
      padding-left: {{ section.settings.padding_left_mobile }}px;
      padding-right: {{ section.settings.padding_right_mobile }}px;
    }
    .social-icons {
      gap: {{ section.settings.icon_gap_mobile }}px;
    }
    .social-icons a img {
      width: {{ section.settings.icon_size_mobile }}px;
      height: {{ section.settings.icon_size_mobile }}px;
    }
  }
</style>

<div class="social-section">
  <div class="container-social">
    <h2>{{ section.settings.title }}</h2>
    <div class="social-icons">
      {% if section.settings.facebook_icon != blank %}
        <a href="{{ section.settings.facebook_link }}" target="_blank">
          <img src="{{ section.settings.facebook_icon | image_url }}" alt="Facebook">
        </a>
      {% endif %}
      {% if section.settings.instagram_icon != blank %}
        <a href="{{ section.settings.instagram_link }}" target="_blank">
          <img src="{{ section.settings.instagram_icon | image_url }}" alt="Instagram">
        </a>
      {% endif %}
    </div>
  </div>
</div>

