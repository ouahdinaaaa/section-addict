<script>
  // Variables globales pour les données produit
  const productData = {
    variants: [
      {% for variant in product.variants %}
        {
          id: {{ variant.id }},
          price: {{ variant.price }},
          available: {{ variant.available | json }},
          option1: "{{ variant.option1 | escape }}",
          option2: "{{ variant.option2 | escape }}",
          option3: "{{ variant.option3 | escape }}"
        }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ],
    currency: "{{ cart.currency.symbol }}",
    basePrice: {{ product.price }}
  };

  let selectedColor = 'pdf';
  let selectedQuantity = 1;
  let currentVariant = null;

  function formatMoney(cents) {
    const price = (cents / 100).toFixed(2).replace('.', ',');
    return `${price} €`;
  }

  function findVariant(color) {
    // Mapper les formats
    const colorMap = {
      'pdf': 'PDF'
    };
    
    const mappedColor = colorMap[color] || color;
    
    console.log('Recherche variante pour:', mappedColor);
    console.log('Variantes disponibles:', productData.variants);
    
    // Tester différentes structures possibles
    let variant = productData.variants.find(v => {
      console.log('Test variant:', v.option1, v.option2, v.option3);
      
      // Cas 1: Format = option1
      if (v.option1 === mappedColor) {
        return true;
      }
      
      // Cas 2: Pas de variantes, prendre la première
      if (!v.option1 || v.option1 === 'Default Title') {
        return true;
      }
      
      return false;
    });
    
    // Si aucune variante trouvée, prendre la première disponible
    if (!variant) {
      variant = productData.variants.find(v => v.available);
    }
    
    console.log('Variante trouvée:', variant);
    return variant;
  }

  function updateVariant() {
    const variant = findVariant(selectedColor);
    const variantIdInput = document.getElementById('variantId');
    const addToCartBtn = document.getElementById('addToCartBtn');
    const errorMessage = document.getElementById('errorMessage');
    const dynamicPrice = document.getElementById('dynamicPrice');
    const totalPriceEl = document.getElementById('totalPrice');

    if (variant && variant.available) {
      currentVariant = variant;
      variantIdInput.value = variant.id;
      addToCartBtn.disabled = false;
      errorMessage.style.display = 'none';
      
      // Mettre à jour les prix affichés
      dynamicPrice.textContent = formatMoney(variant.price);
      totalPriceEl.textContent = formatMoney(variant.price);
      
    } else {
      currentVariant = null;
      variantIdInput.value = '';
      addToCartBtn.disabled = true;
      errorMessage.style.display = 'block';
      
      // Prix par défaut
      dynamicPrice.textContent = formatMoney(productData.basePrice);
      totalPriceEl.textContent = formatMoney(productData.basePrice);
    }
  }

  function selectColor(box) {
    const color = box.getAttribute('data-color');
    const allColorBoxes = document.querySelectorAll('.mysterious-color-box');
    const colorText = document.getElementById('selectedColor');
    const colorProperty = document.getElementById('colorProperty');

    // Mise à jour visuelle
    allColorBoxes.forEach(b => b.classList.remove('selected'));
    box.classList.add('selected');

    // Mise à jour des variables
    selectedColor = color;
    colorText.textContent = 'PDF';
    colorProperty.value = 'PDF';

    // Mettre à jour la variante
    updateVariant();
  }

// Gestion de l'ajout au panier (Ajax + ouverture slide cart)
document.getElementById('addToCartForm').addEventListener('submit', function(e) {
  e.preventDefault(); // éviter la redirection vers /cart

  if (!currentVariant || !currentVariant.available) {
    document.getElementById('errorMessage').style.display = 'block';
    return;
  }

  // Récupération ID variant + quantité
  const productId = currentVariant.id;
  const quantity = parseInt(document.getElementById('quantityInput').value) || 1;

  // 👉 Utilisation de ta fonction globale
if (window.addToCart) {
  addToCart(productId, quantity).then(() => {
    // 👉 Forcer l'ouverture de la slide cart
    const slideCart = document.querySelector('.cart-slide');
    if (slideCart) {
      slideCart.classList.add('active'); // ou la classe qui ouvre ta slide
      document.body.classList.add('cart-open'); // si tu bloques le body au scroll
    }
  });
}



});



  // Initialisation au chargement
  document.addEventListener("DOMContentLoaded", function() {
    // Initialisation avec PDF par défaut
    const firstColorBox = document.querySelector('.mysterious-color-box.selected');
    if (firstColorBox) {
      selectedColor = 'pdf';
    }

    // Mise à jour initiale
    updateVariant();
  });

  // Debug - vous pouvez supprimer cette ligne en production
  console.log('Variantes disponibles:', productData.variants);
</script>

