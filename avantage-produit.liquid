  }

.r36s-step::after {
  content: '';
  position: absolute;
  top: -30%;
  left: -30%;
  width: 160%;
  height: 160%;
  background: radial-gradient(circle, rgba(255, 110, 196, 0.1), transparent 60%);
  z-index: 0;
}
  
</style>



