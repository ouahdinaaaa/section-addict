    },
    {
      "type": "checkbox",
      "id": "answer_bold",
      "label": "Réponses en gras",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "text_bold",
      "label": "Texte sous-titre en gras",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_more_button",
      "label": "Afficher le bouton Voir plus",
