<style>
.votre-enfance-section {
  background: linear-gradient(to top, #0a0028, #000000);
  padding: 4rem 1rem;
  font-family: 'Orbitron', sans-serif;
  text-align: center;
  color: white;
}

.votre-enfance-section h2 {
  font-size: var(--title-size-desktop, 2.4rem);
  font-weight: var(--title-weight, 800);
  background: linear-gradient(90deg, #ff00ff, #ffffff);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 3rem;
}

.votre-enfance-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

.votre-enfance-bloc {
  border-radius: 20px;
  padding: 2rem 1.5rem;
  color: var(--text-color-desktop, white);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  border: var(--border-width, 2px) solid var(--border-color, transparent);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  background: var(--bloc-bg-color);
}

.votre-enfance-icon {
  margin-bottom: -0.5rem;
}

.votre-enfance-bloc:hover {
  transform: translateY(-8px);
  box-shadow: 0 0 25px rgba(255, 255, 255, 0.2);
}

.votre-enfance-icon img {
  width: var(--icon-size-desktop, 48px);
  height: var(--icon-size-desktop, 48px);
  object-fit: contain;
  margin-bottom: -15px;
}

.votre-enfance-title {
  font-size: var(--text-title-size-desktop, 1.3rem);
  font-weight: var(--title-font-weight, bold);
  margin-bottom: 0.5rem;
  color: var(--text-color-desktop, white);
  -webkit-text-stroke: var(--text-stroke-width, 0px) var(--text-stroke-color, transparent);
}

.votre-enfance-text {
  font-size: var(--text-body-size-desktop, 1rem);
  line-height: 1.6;
  color: var(--text-color-desktop, white);
  font-weight: var(--text-weight, normal);
}

@media (max-width: 1024px) {
  .votre-enfance-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 640px) {
  .votre-enfance-grid {
    grid-template-columns: 1fr;
  }
  .votre-enfance-section h2 {
    font-size: var(--title-size-mobile, 1.8rem);
  }
  .votre-enfance-icon img {
    width: var(--icon-size-mobile, 40px);
    height: var(--icon-size-mobile, 40px);
  }
  .votre-enfance-title {
    font-size: var(--text-title-size-mobile, 1rem);
    font-weight: var(--title-font-weight, bold);
    color: var(--text-color-mobile, white);
    -webkit-text-stroke: var(--text-stroke-width, 0px) var(--text-stroke-color, transparent);
  }
  .votre-enfance-text {
    font-size: var(--text-body-size-mobile, 0.9rem);
    color: var(--text-color-mobile, white);
    font-weight: var(--text-weight, normal);
  }
}
</style>

<div class="votre-enfance-section"
  style="
    --title-size-desktop: {{ section.settings.title_size_desktop }};
    --title-size-mobile: {{ section.settings.title_size_mobile }};
    --title-weight: {{ section.settings.title_weight }};
    --text-title-size-desktop: {{ section.settings.title_text_size_desktop }};
    --text-title-size-mobile: {{ section.settings.title_text_size_mobile }};
    --text-body-size-desktop: {{ section.settings.body_text_size_desktop }};
    --text-body-size-mobile: {{ section.settings.body_text_size_mobile }};
    --text-color-desktop: {{ section.settings.text_color_desktop }};
    --text-color-mobile: {{ section.settings.text_color_mobile }};
    --text-weight: {{ section.settings.text_weight }};
    --title-font-weight: {{ section.settings.title_font_weight }};
    --text-stroke-color: {{ section.settings.text_stroke_color }};
    --text-stroke-width: {{ section.settings.text_stroke_width }}px;
    --border-color: {{ section.settings.border_color }};
    --border-width: {{ section.settings.border_width }}px;
    --icon-size-desktop: {{ section.settings.icon_size_desktop }}px;
    --icon-size-mobile: {{ section.settings.icon_size_mobile }}px;
  ">
  <h2>{{ section.settings.main_title }}</h2>
  <div class="votre-enfance-grid">
    {% for block in section.blocks %}
      <div class="votre-enfance-bloc" style="--bloc-bg-color: {{ block.settings.bg_color }};">
        <div class="votre-enfance-icon">
          {% if block.settings.icon_image != blank %}
            <img src="{{ block.settings.icon_image | img_url: '80x' }}" alt="{{ block.settings.title }}">
          {% endif %}
        </div>
        <div class="votre-enfance-title">{{ block.settings.title }}</div>
        <div class="votre-enfance-text">{{ block.settings.text }}</div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Votre enfance - Avantages",
  "settings": [
    { "type": "text", "id": "main_title", "label": "Titre principal", "default": "Votre enfance à portée de main" },
    { "type": "text", "id": "title_size_desktop", "label": "Taille titre (desktop)", "default": "2.4rem" },
    { "type": "text", "id": "title_size_mobile", "label": "Taille titre (mobile)", "default": "1.8rem" },
    { "type": "select", "id": "title_weight", "label": "Titre en gras ?", "default": "800", "options": [ {"value": "normal", "label": "Normal"}, {"value": "bold", "label": "Gras"}, {"value": "800", "label": "Très gras"} ] },

    { "type": "text", "id": "title_text_size_desktop", "label": "Taille texte titre (desktop)", "default": "1.3rem" },
    { "type": "text", "id": "title_text_size_mobile", "label": "Taille texte titre (mobile)", "default": "1rem" },
    { "type": "text", "id": "body_text_size_desktop", "label": "Taille texte contenu (desktop)", "default": "1rem" },
    { "type": "text", "id": "body_text_size_mobile", "label": "Taille texte contenu (mobile)", "default": "0.9rem" },

    { "type": "color", "id": "text_color_desktop", "label": "Couleur du texte (desktop)", "default": "#ffffff" },
    { "type": "color", "id": "text_color_mobile", "label": "Couleur du texte (mobile)", "default": "#ffffff" },
    { "type": "select", "id": "text_weight", "label": "Texte en gras ?", "default": "normal", "options": [ {"value": "normal", "label": "Normal"}, {"value": "bold", "label": "Gras"} ] },

    { "type": "select", "id": "title_font_weight", "label": "Gras du titre de bloc ?", "default": "bold", "options": [ {"value": "normal", "label": "Normal"}, {"value": "bold", "label": "Gras"} ] },
    { "type": "color", "id": "text_stroke_color", "label": "Couleur du contour du titre", "default": "#000000" },
    { "type": "range", "id": "text_stroke_width", "label": "Taille du contour du titre (px)", "default": 0, "min": 0, "max": 4, "step": 0.1 },

    { "type": "color", "id": "border_color", "label": "Couleur de la bordure", "default": "#ffffff" },
    { "type": "range", "id": "border_width", "label": "Épaisseur de la bordure (px)", "default": 2, "min": 0, "max": 10, "step": 1 },

    { "type": "range", "id": "icon_size_desktop", "label": "Taille icône (desktop)", "default": 48, "min": 24, "max": 100, "step": 1 },
    { "type": "range", "id": "icon_size_mobile", "label": "Taille icône (mobile)", "default": 40, "min": 24, "max": 100, "step": 1 }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Bloc avantage",
      "settings": [
        { "type": "image_picker", "id": "icon_image", "label": "Icône (image)" },
        { "type": "text", "id": "title", "label": "Titre du bloc", "default": "Plus de 15 000 jeux classiques pris en charge" },
        { "type": "textarea", "id": "text", "label": "Texte du bloc", "default": "Plongez dans l'univers rétro..." },
        { "type": "color", "id": "bg_color", "label": "Couleur de fond du bloc", "default": "#ff5c00" }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Avantages - Votre enfance",
      "category": "Avantages",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}
