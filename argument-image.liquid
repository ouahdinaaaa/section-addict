<style>
.console-aventure {
  display: flex;
  flex-wrap: nowrap;
  align-items: stretch;
  justify-content: center;
  gap: 2rem;
  padding: 4rem 1rem;
  background: linear-gradient(to bottom, #1a0133, #0e0018);
  color: {{ section.settings.text_color }};
  font-family: 'Orbitron', sans-serif;
  transition: background-color 0.3s ease;
}

.console-aventure-text {
  flex: 1;
  max-width: 600px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: left;
}

.console-aventure-text h3 {
  font-size: {{ section.settings.title_size_desktop }}px;
  margin-bottom: 2rem;
  color: {{ section.settings.title_color }};
  {% if section.settings.title_bold %}
    font-weight: bold;
  {% else %}
    font-weight: normal;
  {% endif %}
  -webkit-text-stroke: {{ section.settings.title_stroke_size }}px {{ section.settings.title_stroke_color }};
}


.console-aventure-features {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.console-aventure-feature {
  display: flex;
  align-items: center;
  background: {{ block.settings.bg_color | default: 'rgba(255,255,255,0.05)' }};
  padding: 1rem 1.5rem;
  border-radius: 12px;
  border: 1px solid rgba(255,255,255,0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.console-aventure-feature:hover {
  transform: translateY(-5px);
  box-shadow: 0 4px 15px rgba(255,255,255,0.2);
}

.console-aventure-feature-icon {
  width: 32px;
  height: 32px;
  margin-right: 1rem;
  background: {{ block.settings.icon_background_color | default: '#7a59ff' }};
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 1rem;
  flex-shrink: 0;
  transition: background 0.3s ease;
}

.console-aventure-feature-text {
  font-size: {{ section.settings.text_size_desktop }}px;
  color: {{ block.settings.text_color | default: section.settings.text_color }};
  {% if section.settings.title_bold %}
    font-weight: bold;
  {% else %}
    font-weight: normal;
  {% endif %}
}


.console-aventure-image {
  flex: 1;
  min-width: 300px;
  max-width: 20%;
  display: flex;
}

.console-aventure-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: {{ section.settings.image_radius }}px;
  box-shadow: 0 0 10px rgba(0,0,0,0.3);
  transition: transform 0.3s ease;
}

.console-aventure-image img:hover {
  transform: scale(1.03);
}

@media (max-width: 768px) {
  .console-aventure {
    flex-direction: column;
    align-items: center;
    text-align: left;
  }

  .console-aventure-image,
  .console-aventure-text {
    max-width: 100%;
  }

  .console-aventure-text h3 {
    font-size: {{ section.settings.title_size_mobile }}px;
  }

  .console-aventure-feature-text {
    font-size: {{ section.settings.text_size_mobile }}px;
  }

  .console-aventure-image img {
    height: auto;
    max-height: 300px;
  }
}
</style>

<div class="console-aventure">
  <div class="console-aventure-text">
    <h3>{{ section.settings.title }}</h3>
    <div class="console-aventure-features">
      {% for block in section.blocks %}
        <div class="console-aventure-feature" style="background: {{ block.settings.bg_color }};">
          <div class="console-aventure-feature-icon" style="background: {{ block.settings.icon_background_color }};">
            ✔
          </div>
          <div class="console-aventure-feature-text" style="color: {{ block.settings.text_color }}; font-weight: bold;">
            {{ block.settings.text }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  <div class="console-aventure-image">
    {% if section.settings.image != blank %}
      <img src="{{ section.settings.image | img_url: '800x' }}" alt="Machine à souvenirs">
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Bloc Console2",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Image" },
    { "type": "text", "id": "title", "label": "Titre", "default": "Une machine à souvenirs." },
    { "type": "color", "id": "background_color", "label": "Couleur de fond", "default": "#1a1a1f" },
    { "type": "color", "id": "title_color", "label": "Couleur du titre", "default": "#ffffff" },
    { "type": "range", "id": "title_stroke_width", "label": "Epaisseur du texte stroke (px)", "min": 0, "max": 4, "step": 1, "default": 1 },
    { "type": "color", "id": "title_stroke_color", "label": "Couleur du stroke du titre", "default": "#ff00ff" },
    { "type": "checkbox", "id": "title_bold", "label": "Titre en gras", "default": true },
    { "type": "color", "id": "text_color", "label": "Couleur du texte", "default": "#d4d4d4" },
    { "type": "range", "id": "image_radius", "label": "Arrondi de l'image", "min": 0, "max": 50, "step": 2, "default": 12 },
    { "type": "range", "id": "title_size_desktop", "label": "Taille du titre (desktop)", "min": 16, "max": 48, "step": 1, "default": 24 },
    { "type": "range", "id": "title_size_mobile", "label": "Taille du titre (mobile)", "min": 14, "max": 32, "step": 1, "default": 20 },
    { "type": "range", "id": "text_size_desktop", "label": "Taille du texte (desktop)", "min": 12, "max": 30, "step": 1, "default": 16 },
    { "type": "range", "id": "text_size_mobile", "label": "Taille du texte (mobile)", "min": 10, "max": 24, "step": 1, "default": 14 }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Bloc caractéristique",
      "settings": [
        { "type": "text", "id": "text", "label": "Texte du bloc", "default": "Une phrase rétro sympa." },
        { "type": "color", "id": "bg_color", "label": "Couleur de fond du bloc", "default": "#ff5c00" },
        { "type": "color", "id": "icon_background_color", "label": "Couleur du fond de l’icône", "default": "#ff9900" },
        { "type": "color", "id": "text_color", "label": "Couleur du texte", "default": "#ffffff" },
        { "type": "checkbox", "id": "text_bold", "label": "Texte en gras", "default": true }
      ]
    }
  ],
  "presets": [
    { "name": "Bloc Console2", "blocks": [ { "type": "feature" }, { "type": "feature" }, { "type": "feature" } ] }
  ]
}
{% endschema %}
