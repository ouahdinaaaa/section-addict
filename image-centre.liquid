{% schema %}
{
  "name": "Image-Logo",
  "tag": "section",
  "class": "section-centered-image",
  "settings": [
    {
      "type": "image_picker",
      "id": "custom_image",
      "label": "Image à insérer"
    },
    {
      "type": "range",
      "id": "image_width",
      "label": "Largeur de l'image (en px)",
      "min": 50,
      "max": 1000,
      "step": 10,
      "unit": "px",
      "default": 300
    }
  ],
  "presets": [
    {
      "name": "Image centrée"
    }
  ]
}
{% endschema %}

{% if section.settings.custom_image %}
  <div class="centered-image-wrapper">
    <img
      src="{{ section.settings.custom_image | image_url }}"
      alt="Image centrée"
      style="width: {{ section.settings.image_width }}px;" />
  </div>
{% endif %}

<style>
  .centered-image-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 30px 0;
    text-align: center;
  }

  .centered-image-wrapper img {
    display: block;
    height: auto;
  }
</style>
