                width: 150px;
                height: 150px;
            }
            #alternative_QxKn .vs_img {
                width: calc(50% - 6px);
            }
            #alternative_QxKn .us_desc,
            #alternative_QxKn .them_desc {
                font: normal normal normal 14px/16px Apercu Pro;
            }
            #alternative_QxKn .them_desc>div:after,
            #alternative_QxKn .us_desc>div:after {
                width: 18px;
                height: 18px;
                background-size: 18px;
            }
            #alternative_QxKn .us_desc>div:after {
                right: -28px;
            }
            #alternative_QxKn .us_desc {
                padding-right: 43px;
            }
            #alternative_QxKn .them_desc>div:after {
                left: 15px;
            }
            #alternative_QxKn .them_desc>div {
                padding-left: 45px;
                padding-right: 18px;
            }
            #alternative_QxKn .s_vs_desc {
                height: 70px;
                margin-bottom: 4px;
            }
            #alternative_QxKn .descs_below_table {
                font-size: 17px;
                padding: 0 15px;
                background: transparent linear-gradient(180deg, #2751a5 0%, #000000 100%) 0% 0% no-repeat padding-box;
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                margin-bottom: 14px;
            }
            #alternative_QxKn .try_btn {
                font: normal normal 500 18px/22px Apercu Pro;
                letter-spacing: 0.9px;
                height: 52px;
            }
            #alternative_QxKn .desc_below_btn {
                font: normal normal normal 13px/15px Apercu Pro;
            }
            #alternative_QxKn .vs_desc_holder {
                margin-bottom: 21px;
                padding: 0 7px;
            }
            #alternative_QxKn img.satis_badge {
                width: 90px;
                height: 86px;
                transform: translate(-30px, -15px);
            }
        }
    </style>

    
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const btn = document.querySelector('#alternative_QxKn .try_btn');
    if (btn) {
      btn.addEventListener('click', function (e) {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
    }
  });
</script>