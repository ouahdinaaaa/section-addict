{% schema %}
{
  "name": "Comparaison produit",
  "presets": [
    {
      "name": "Comparaison produit"
    }
  ],
  "tag": "section",
  "class": "shopify-section",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Sous-titre",
      "default": "us vs. them"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Titre principal",
      "default": "Coffee upgrade like no other"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description courte",
      "default": "Rainbow Dust - coffee"
    },
    {
      "type": "image_picker",
      "id": "image_us",
      "label": "Image produit Rainbow Dust"
    },
    {
      "type": "image_picker",
      "id": "badge_image",
      "label": "Badge de satisfaction (optionnel)"
    },
    {
      "type": "image_picker",
      "id": "image_them",
      "label": "Image produit concurrent"
    },
    {
      "type": "textarea",
      "id": "comparisons",
      "label": "Avantages comparatifs (un par ligne, syntaxe : nous | eux)",
      "default": "zero crash or jitters | can give major crashes or jitters\ndelicious coffee taste | bland coffee taste\nimproved immunity support | zero immunity support\nall-in-one super blend | just coffee, nothing else"
    },
    {
      "type": "text",
      "id": "description_below",
      "label": "Texte en dessous du tableau",
      "default": "Rainbow Dust v1.0 can be mixed with just about anything to enjoy it however you like..."
    },
    {
      "type": "text",
      "id": "button_link",
      "label": "Lien du bouton",
      "default": "/pages/science"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texte du bouton",
      "default": "TRY RAINBOW DUST RISK-FREE"
    },
    {
      "type": "text",
      "id": "below_button_text",
      "label": "Texte sous le bouton",
      "default": "We offer a risk free money back guarantee with each order"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Couleur de fond de la section",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Couleur principale du texte",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "gradient_start",
      "label": "Dégradé - couleur de départ",
      "default": "#724CE9"
    },
    {
      "type": "color",
      "id": "gradient_end",
      "label": "Dégradé - couleur de fin",
      "default": "#FF2277"
    },
    {
      "type": "range",
      "id": "heading_size_desktop",
      "label": "Taille du titre (desktop)",
      "min": 20,
      "max": 80,
      "step": 1,
      "unit": "px",
      "default": 42
    },
    {
      "type": "range",
      "id": "heading_size_mobile",
      "label": "Taille du titre (mobile)",
      "min": 14,
      "max": 40,
      "step": 1,
      "unit": "px",
      "default": 24
    },
    {
      "type": "checkbox",
      "id": "heading_bold",
      "label": "Titre en gras ?",
      "default": false
    },
    {
      "type": "range",
      "id": "description_size_desktop",
      "label": "Taille de la description (desktop)",
      "min": 14,
      "max": 32,
      "step": 1,
      "unit": "px",
      "default": 21
    },
    {
      "type": "range",
      "id": "description_size_mobile",
      "label": "Taille de la description (mobile)",
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "checkbox",
      "id": "description_bold",
      "label": "Description en gras ?",
      "default": false
    },
    {
      "type": "range",
      "id": "text_below_size",
      "label": "Taille du texte sous le bouton",
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "checkbox",
      "id": "text_below_bold",
      "label": "Texte sous le bouton en gras ?",
      "default": false
    },
    {
      "type": "color",
      "id": "button_background",
      "label": "Couleur du bouton",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Couleur du texte du bouton",
      "default": "#FFFFFF"
    }
  ]
}
{% endschema %}



<div id="alternative_QxKn">
  <div class="section_holder" data-flavor="Coffee">
    <div class="subheading">{{ section.settings.subheading }}</div>
    <div class="heading">{{ section.settings.heading }}</div>
    <div class="desc">{{ section.settings.description }}</div>
    <div class="compare_box">
      <div class="img_vs_holder">
        <div class="vs_img">
          {% if section.settings.image_us != blank %}
            <img src="{{ section.settings.image_us | img_url: '480x' }}" alt="us">
          {% endif %}
          {% if section.settings.badge_image != blank %}
            <img class="satis_badge" src="{{ section.settings.badge_image | img_url: 'medium' }}" alt="satisfaction">
          {% endif %}
        </div>
        <div class="img_vs">VS.</div>
        <div class="vs_img">
          {% if section.settings.image_them != blank %}
            <img src="{{ section.settings.image_them | img_url: '480x' }}" alt="them">
          {% endif %}
        </div>
      </div>
      <div class="vs_desc_holder">
        {% assign rows = section.settings.comparisons | newline_to_br | split: '<br />' %}
        {% for row in rows %}
          {% assign parts = row | split: '|' %}
          <div class="s_vs_desc">
            <div class="us_desc">
              <div>{{ parts[0] | strip }}</div>
            </div>
            <div class="them_desc">
              <div>{{ parts[1] | strip }}</div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="descs_below_table">{{ section.settings.description_below }}</div>
      <a class="try_btn" href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
      <div class="desc_below_btn">{{ section.settings.below_button_text }}</div>
    </div>
  </div>
</div>


 <style>
        #alternative_QxKn {
            position: relative;
            background-color: #e7f0fd;
        }

        #alternative_QxKn .section_holder {
            position: relative;
            margin: auto;
            max-width: 680px;
            padding: 80px 40px;
        }

        #alternative_QxKn .subheading {
            width: fit-content;
            height: 35px;
            padding: 0 12.2px;
            background: black;
            font: normal normal 500 18px/22px Apercu Pro;
            letter-spacing: 0px;
            color: #FFFFFF;
            text-transform: lowercase;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 5px;
            margin: 0 auto 6px;
            font-weight:bold;
        }

        #alternative_QxKn .heading {
            font-family: 'TAN - MEMORIES';
