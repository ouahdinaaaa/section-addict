  <style>
    #carousel-{{ section.id }} {
      --bg-start: {{ section.settings.bg_start }};
      --bg-end: {{ section.settings.bg_end }};
      --card-radius: {{ section.settings.card_radius }}px;
      --card-shadow: 0 10px 50px 10px rgba(0, 0, 0, 0.5);
      --items-count: {{ section.blocks.size | default: 10 }};
      --width-min: {{ section.settings.card_width_min }}px;
      --width-ideal: {{ section.settings.card_width_ideal }}vw;
      --width-max: {{ section.settings.card_width_max }}px;
      --height-min: {{ section.settings.card_height_min }}px;
      --height-ideal: {{ section.settings.card_height_ideal }}vw;
      --height-max: {{ section.settings.card_height_max }}px;
      --cursor-size: 40px;
    }
    #carousel-{{ section.id }} .carousel-section {
      position: relative;
    }
    #carousel-{{ section.id }} .carousel {
      position: relative;
      z-index: 1;
      height: 100vh;
      overflow: hidden;
      pointer-events: none;
      background: linear-gradient(135deg, var(--bg-start), var(--bg-end));
      font-family: {{ section.settings.font_stack | default: 'Roboto, system-ui, -apple-system, Segoe UI, Arial, sans-serif' }};
    }
    #carousel-{{ section.id }} .carousel-item {
      --items: var(--items-count);
      --width: clamp(var(--width-min), var(--width-ideal), var(--width-max));
      --height: clamp(var(--height-min), var(--height-ideal), var(--height-max));
      --x: calc(var(--active) * 800%);
      --y: calc(var(--active) * 200%);
      --rot: calc(var(--active) * 120deg);
      --opacity: calc(var(--zIndex) / var(--items) * 3 - 2);
      overflow: hidden;
      position: absolute;
      z-index: var(--zIndex);
      width: var(--width);
      height: var(--height);
      margin: calc(var(--height) * -0.5) 0 0 calc(var(--width) * -0.5);
      border-radius: var(--card-radius);
      top: 50%;
      left: 50%;
      user-select: none;
      transform-origin: 0% 100%;
      box-shadow: var(--card-shadow);
      background: #000;
      pointer-events: all;
      transform: translate(var(--x), var(--y)) rotate(var(--rot));
      transition: transform 0.8s cubic-bezier(0, 0.02, 0, 1);
    }
    #carousel-{{ section.id }} .carousel-item .carousel-box {
      position: absolute;
      z-index: 1;
      inset: 0;
      opacity: var(--opacity);
      transition: opacity 0.8s cubic-bezier(0, 0.02, 0, 1);
    }
    #carousel-{{ section.id }} .carousel-item .carousel-box:before {
      content: "";
      position: absolute;
      z-index: 1;
      inset: 0;
      background: linear-gradient(
        to bottom,
        rgba(0,0,0,0.3),
        rgba(0,0,0,0) 30%,
        rgba(0,0,0,0) 50%,
        rgba(0,0,0,0.5)
      );
    }
    #carousel-{{ section.id }} .title {
      position: absolute;
      z-index: 1;
      color: #fff;
      bottom: 20px;
      left: 20px;
      font-size: clamp(20px, 3vw, 30px);
      text-shadow: 0 4px 4px rgba(0,0,0,0.1);
    }
    #carousel-{{ section.id }} .num {
      position: absolute;
      z-index: 1;
      color: #fff;
      top: 10px;
      left: 20px;
      font-size: clamp(20px, 10vw, 80px);
    }
    #carousel-{{ section.id }} .carousel-item img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      pointer-events: none;
      display: block;
    }

    #carousel-{{ section.id }} .layout {
      position: absolute;
      z-index: 0;
      inset: 0;
      pointer-events: none;
    }
    #carousel-{{ section.id }} .layout:before {
      content: "";
      position: absolute;
      z-index: 1;
      top: 0;
      left: 90px;
      width: 10px;
      height: 100%;
      border: 1px solid #fff;
      border-top: none;
      border-bottom: none;
      opacity: 0.15;
    }
    #carousel-{{ section.id }} .layout .box {
      position: absolute;
      bottom: 0;
      left: 30px;
      color: #fff;
      transform-origin: 0% 10%;
      transform: rotate(-90deg);
      font-size: 9px;
      line-height: 1.4;
      text-transform: uppercase;
      opacity: 0.4;
    }

    #carousel-{{ section.id }} .cursor {
      position: fixed;
      z-index: 10;
      top: 0; left: 0;
      width: var(--cursor-size); height: var(--cursor-size);
      border-radius: 50%;
      border: 1px solid rgba(255,255,255,0.2);
      margin: calc(var(--cursor-size) * -0.5) 0 0 calc(var(--cursor-size) * -0.5);
      transition: transform 0.85s cubic-bezier(0, 0.02, 0, 1);
      display: none;
      pointer-events: none;
    }
    #carousel-{{ section.id }} .cursor2 { --cursor-size: 2px; transition-duration: 0.7s; }
    @media (pointer: fine) { #carousel-{{ section.id }} .cursor { display: block; } }

    /* Section wrapper background (outside the carousel box) */
    #carousel-{{ section.id }} {
      background: linear-gradient(135deg, var(--bg-start), var(--bg-end));
    }

    #carousel-{{ section.id }} .carousel-heading {
  margin: 0 0 24px 0;
  padding: 24px 16px 0;
  font-size: clamp(22px, 3.2vw, 40px);
  line-height: 1.15;
  font-weight: 700;
  color: #fff;
  top : 10%;
  text-align: center; /* modifie si besoin */
}

  </style>

  <script>
    (function() {
      const root = document.getElementById('carousel-{{ section.id }}');
      if (!root) return;

      const speedWheel = {{ section.settings.speed_wheel | default: 0.02 }};
      const speedDrag  = {{ section.settings.speed_drag  | default: -0.1 }};

      let progress = 50;
      let startX = 0;
      let active = 0;
      let isDown = false;

      const $items = root.querySelectorAll('.carousel-item');
      const $cursors = root.querySelectorAll('.cursor');

      const getZindex = (array, index) =>
        array.map((_, i) => (index === i) ? array.length : array.length - Math.abs(index - i));

      const displayItems = (item, index, active) => {
        const zIndex = getZindex([ ...$items ], active)[index];
        item.style.setProperty('--zIndex', zIndex);
        item.style.setProperty('--active', (index - active) / $items.length);
      };

      const animate = () => {
        progress = Math.max(0, Math.min(progress, 100));
        active = Math.floor(progress / 100 * ($items.length - 1));
        $items.forEach((item, index) => displayItems(item, index, active));
      };
      animate();

      $items.forEach((item, i) => {
        item.addEventListener('click', () => {
          progress = (i / $items.length) * 100 + 10;
          animate();
        }, { passive: true });
      });

      const handleWheel = (e) => {
        const wheelProgress = (e.deltaY || 0) * speedWheel;
        progress = progress + wheelProgress;
        animate();
      };
      const handleMouseMove = (e) => {
        if (e.type === 'mousemove') {
          $cursors.forEach(($cursor) => {
            $cursor.style.transform = `translate(${e.clientX}px, ${e.clientY}px)`;
          });
        }
        if (!isDown) return;
        const x = e.clientX || (e.touches && e.touches[0] && e.touches[0].clientX) || 0;
        const mouseProgress = (x - startX) * speedDrag;
        progress = progress + mouseProgress;
        startX = x;
        animate();
      };
      const handleMouseDown = (e) => {
        isDown = true;
        startX = e.clientX || (e.touches && e.touches[0] && e.touches[0].clientX) || 0;
      };
      const handleMouseUp = () => { isDown = false; };

      // Scope listeners to this section only
      root.addEventListener('wheel', handleWheel, { passive: true });
      root.addEventListener('mousedown', handleMouseDown);
      root.addEventListener('mousemove', handleMouseMove);
      root.addEventListener('mouseup', handleMouseUp);
      root.addEventListener('mouseleave', handleMouseUp);
      root.addEventListener('touchstart', handleMouseDown, { passive: true });
      root.addEventListener('touchmove', handleMouseMove, { passive: true });
      root.addEventListener('touchend', handleMouseUp);
      root.addEventListener('touchcancel', handleMouseUp);

      // Editor re-render (Shopify theme editor)
      document.addEventListener('shopify:section:select', (e) => { if (e.detail.sectionId === '{{ section.id }}') animate(); });
      document.addEventListener('shopify:block:select',   (e) => { if (e.detail.sectionId === '{{ section.id }}') animate(); });
      document.addEventListener('shopify:block:deselect', (e) => { if (e.detail.sectionId === '{{ section.id }}') animate(); });
    })();
  </script>
</section>

